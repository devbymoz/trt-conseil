{% extends 'base.html.twig' %}

{% block title %}Créer un consultant{% endblock %}
{% block title_h1 %}Créer un consultant{% endblock %}

{% block body %}
    <h2 class="text-center">Entrez le mail du consultant</h2>
    <p class="text-center">Le consultant recevra un email pour créer son mot de passe</p>

    {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <div class="mt-3">
            {{ form_start(registrationForm) }}
                <div class="input-group input-group-lg mb-3">
                    {{ form_widget(registrationForm.email) }}
                </div>
                {{ form_errors(registrationForm.email) }}

                <button type="submit" class="btn btn-primary btn-lg">Créer le consultant</button>
            {{ form_end(registrationForm) }}
        </div>
{% endblock %}
