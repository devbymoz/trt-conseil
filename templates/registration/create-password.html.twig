{% extends 'base.html.twig' %}

{% block title %}Créer votre mot de passe{% endblock %}
{% block title_h1 %}Créer votre mot de passe{% endblock %}

{% block body %}
    <h2 class="text-center">Veuillez créer votre mot de passe</h2>
    <p class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="mt-3">
        {{ form_start(registrationForm) }}
            <div class="input-group input-group-lg mb-3">
                {{ form_widget(registrationForm.plainPassword.first) }}
            </div>
            {{ form_errors(registrationForm.plainPassword.first) }}

            <div class="input-group input-group-lg mb-3">
                {{ form_widget(registrationForm.plainPassword.second) }}
            </div>
            {{ form_errors(registrationForm.plainPassword.second) }}

            <button type="submit" class="btn btn-primary btn-lg">Créer mon mot de passe</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}