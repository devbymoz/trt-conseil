{% extends 'base.html.twig' %}

{% block title %}Connectez-vous{% endblock %}
{% block title_h1 %}Connectez-vous{% endblock %}

{% block body %}
    <h2 class="text-center">Connectez-vous Ã  votre espace</h2>
    <p class="text-center">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="mt-3">
        <form action="{{ path('app_login') }}" method="post">
            <div class="input-group input-group-lg mb-3">
                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="Entrez votre email" class="form-control"/>
            </div>
            <div class="input-group input-group-lg mb-3">
                <input type="password" id="password" name="_password" placeholder="Entrez votre mot de passe" class="form-control"/>
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <button type="submit" class="btn btn-primary btn-lg">Se connecter</button>
        </form>
    </div>
{% endblock %}